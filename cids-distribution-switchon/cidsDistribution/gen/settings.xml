<?xml version="1.0" encoding="UTF-8"?>
<settings>
    <localRepository>${env.MAVEN_LIB_DIR}</localRepository>
    <profiles>
        <profile>
            <id>global-properties</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <!-- used in cismet-parent -->
                <de.cismet.keystore.path>__KEYSTORE__</de.cismet.keystore.path>
                <!-- used in cismet-parent -->
                <de.cismet.keystore.pass>__KEYSTORE_PASSWORD__</de.cismet.keystore.pass>
                
                <!--
                    Set distribution specific properties for distribution modules
                    and override properties defined in parent pom.xml
                -->
                <de.cismet.cidsCodebase>${env.CIDS_CODEBASE}</de.cismet.cidsCodebase>
                <de.cismet.libDir>${env.MAVEN_LIB_DIR}</de.cismet.libDir>
                <de.cismet.cidsDistDir>${env.CIDS_DISTRIBUTION_DIR}</de.cismet.cidsDistDir>
                <de.cismet.cidsAccountExtension>${env.CIDS_ACCOUNT_EXTENSION}</de.cismet.cidsAccountExtension>
                <maven.build.timestamp.format>dd/MM/yyyy</maven.build.timestamp.format>
            </properties>
            <repositories>
                <repository>
                    <id>cismet-repo</id>
                    <url>https://repo.cismet.de/repo</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>    
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy> 
                        <checksumPolicy>fail</checksumPolicy>                    
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
<!--        <pluginRepository>
                    <id>cismet-repo</id>
                    <url>file://${env.MAVEN_LIB_DIR}</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>    
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy> 
                        <checksumPolicy>fail</checksumPolicy>                    
                    </snapshots>
                </pluginRepository>
-->
                <pluginRepository>
                    <id>cismet-repo</id>
                    <url>https://repo.cismet.de/repo</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>    
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy> 
                        <checksumPolicy>fail</checksumPolicy>                    
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <mirrors>
        <mirror>
            <id>central-proxy</id>
            <name>cismet-repo</name>
            <url>https://repo.cismet.de/repo</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
    </mirrors>
    <servers>
        <server>
            <id>cismet-repo</id>
            <username>__SERVER_USERNAME__</username>
            <password>__SERVER_PASSWORD__</password>
        </server>
        <server>
            <id>central-proxy</id>
            <username>__SERVER_USERNAME__</username>
            <password>__SERVER_PASSWORD__</password>
        </server>
    </servers>
    <activeProfiles>
        <activeProfile>global-properties</activeProfile>
        <activeProfile>cismet-inhouse-dev</activeProfile>
    </activeProfiles>
</settings>
